                / end #about
              / Network Section Details
              %li#networks.section
                %h2 Find Me
                %ul
                  %li
                    %a.external{:href => "http://twitter.com/mustafaquilon"}
                      %img{:alt => "Twitter", :src => "images/profiles/twitter.png"}/
                      %strong Twitter
                      twitter.com/mustafaquilon
                  %li
                    %a.external{:href => "http://facebook.com/mustafaquilon"}
                      %img{:alt => "Facebook", :src => "images/profiles/facebook.png"}/
                      = succeed "facebook.com/mustafaquilon" do
                        %strong Facebook
                  %li
                    %a.external{:href => "http://linkedin.com/in/mustafaquilon"}
                      %img{:alt => "LinkedIn", :src => "images/profiles/linkedin.png"}/
                      = succeed "linkedin.com/in/mustafaquilon" do
                        %strong LinkedIn
                  %li
                    %a.external{:href => "http://lastfm.com/"}
                      %img{:alt => "lastfm", :src => "images/profiles/lastfm.png"}/
                      %strong Last FM
                      lastfm.com/profileName
                  %li
                    %a.external{:href => "http://flickr.com/"}
                      %img{:alt => "flickr", :src => "images/profiles/flickr.png"}/
                      %strong Flickr
                      flickr.com/profileName
                  %li
                    %a.external{:href => "http://orkut.com/"}
                      %img{:alt => "orkut", :src => "images/profiles/orkut.png"}/
                      %strong Orkut
                      orkut.com/profileName
                  %li
                    %a.external{:href => "http://digg.com/"}
                      %img{:alt => "orkut", :src => "images/profiles/digg.png"}/
                      %strong Digg
                      digg.com/profileName
                  %li
                    %a.external{:href => "mailto:example@email.com"}
                      %img{:alt => "orkut", :src => "images/profiles/google_wave.png"}/
                      %strong Google Wave
                      example@email.com
                %p
                  You can also find me on
                  = succeed "," do
                    %a.external{:href => "http://orkut.com"} Orkut
                  = succeed "," do
                    %a.external{:href => "http://stumbleupon.com"} StumbleUpon
                  = succeed "," do
                    %a.external{:href => "http://yahoo.com"} Yahoo
                  = succeed "," do
                    %a.external{:href => "http://delicious.com"} Delicious
                  %a.external{:href => "http://technorati.com"} Technorati
                  and
                  = succeed "." do
                    %a.external{:href => "http://vimeo.com"} Vimeo
                / end #networks
              / Contact Section Details
              %li#contact.section
                %h2 Contact
                #addressDetails
                  %h3 Your Name/Title
                  %p
                    Street/Road Name,
                    %br/
                    Address Line 2,
                    %br/
                    Locality, Area,
                    %br/
                    CityName: 600 001,
                  %p
                    %strong Tel:
                    +91 044 1254 4125
                    %br/
                    %strong Cell:
                    + 91 98562 12541
                    %br/
                    %strong Email:
                    %a{:href => "mailto:example@email.com"} example@domain.com
                    / For additional security it is advisable to encrypt this email id using http://hivelogic.com/enkoder/form
                  / end #about
                #contactForm
                  #note
                  %form.contact{:action => "javascript:alert('error!');"}
                    / Change your email id in the config.php file
                    .field
                      %label{:for => "name"} Name
                      %input#name.text{:name => "name", :type => "text", :value => ""}/
                    .field
                      %label{:for => "email"} E-Mail
                      %input#email.text{:name => "email", :type => "text", :value => ""}/
                    .field
                      %label{:for => "message"} Message
                      %textarea#message.textbox{:cols => "25", :name => "message", :rows => "3"}
                    .buttons
                      %input.submit{:type => "submit", :value => "Submit"}/
                      %input.submit.reset{:type => "reset", :value => "Reset"}/
                  / end #contactForm
                / end #contact
            / end #scrollWrapper
          / end #content
        / end #contentWrapper
      / end #outerWrapper
